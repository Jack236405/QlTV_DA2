@model PJC.Models.PhieuMuon

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Tạo mới phiếu mượn</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/User/Home">Trang chủ</a></li>
        <li class="breadcrumb-item active">Tạo mới phiếu mượn</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" href="/User/PhieuMuon/Index">Về danh sách</a>
        </div>

        <div class="card-body">
            <div class="col-md-4">
                <form action="~/User/PhieuMuon/Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="MaPM" class="control-label"></label>
                        <input asp-for="MaPM" class="form-control" />
                        <span asp-validation-for="MaPM" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaDG" class="control-label"></label>
                        <input class="form-control" list="browsers" name="browser" id="browser">
                        <datalist id="browsers">
                            <select asp-for="MaDG" class="form-control" asp-items="ViewBag.MaDG"></select>
                        </datalist>
                    </div>
                    <div class="form-group">
                        <label asp-for="NgayMuon" class="control-label"></label>
                        <input asp-for="NgayMuon" class="form-control" />
                        <span asp-validation-for="NgayMuon" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NgayHenTra" class="control-label"></label>
                        <input asp-for="NgayHenTra" class="form-control" />
                        <span asp-validation-for="NgayHenTra" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SoLuongMuon" class="control-label"></label>
                        <input asp-for="SoLuongMuon" class="form-control" />
                        <span asp-validation-for="SoLuongMuon" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NguoiDung" class="control-label"></label>
                        <input asp-for="NguoiDung" class="form-control" value="@ViewBag.sessionv" readonly />
                        <span asp-validation-for="NguoiDung" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





