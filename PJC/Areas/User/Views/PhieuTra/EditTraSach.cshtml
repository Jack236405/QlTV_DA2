@model PJC.Models.PhieuMuonInCTPM

@{
    ViewData["Title"] = "EditTraSach";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}
    <div class="container-fluid">
        <h1 class="mt-4">Trả Sách</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/User/Home">Trang chủ</a></li>
            <li class="breadcrumb-item active">Trả sách</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <a class="btn btn-success" href="/User/PhieuTra/Index" >Về danh sách</a>
            </div>
            <div class="card-body">
                <div class="col-md-4">
                    <form action="~/User/PhieuTra/EditTraSach" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="MaPM" class="control-label"></label>
                            <input asp-for="MaPM" class="form-control" readonly />
                            <span asp-validation-for="MaPM" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MaDG" class="control-label"></label>
                            <input asp-for="MaDG" class="form-control" readonly />
                            <span asp-validation-for="MaDG" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MaSach" class="control-label"></label>
                            <input asp-for="MaSach" class="form-control" readonly />
                            <span asp-validation-for="MaSach" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NgayHenTra" class="control-label"></label>
                            <input asp-for="NgayHenTra" class="form-control" readonly />
                            <span asp-validation-for="NgayHenTra" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NgayTra" class="control-label"></label>
                            <input asp-for="NgayTra" class="form-control" />
                            <span asp-validation-for="NgayTra" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TinhTrangSach" class="control-label"></label>
                            <select asp-for="TinhTrangSach" class="form-control" disabled>
                                <option> - chọn - </option>
                                <option value="2">Bình Thường</option>
                                <option value="1">Đã hư một phần</option>
                                @*<option value="0">Mất sách</option>*@
                            </select>
                            @*<span asp-validation-for="TinhTrangSach" class="text-danger"></span>*@
                        </div>
                        <div class="form-group">
                            <label asp-for="TinhTrangTra" class="control-label"></label>
                            <select asp-for="TinhTrangTra" class="form-control">
                                <option> - chọn - </option>
                                <option value="2">Bình Thường</option>
                                <option value="1">Đã hư một phần</option>
                                <option value="0">Mất sách</option>
                            </select>
                            <span asp-validation-for="TinhTrangTra" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NguoiDung" class="control-label"></label>
                            <input asp-for="NguoiDung" class="form-control" value="@ViewBag.sessionv" readonly />
                            <span asp-validation-for="NguoiDung" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GhiChu" class="control-label"></label>
                            <input asp-for="GhiChu" class="form-control" />
                            <span asp-validation-for="GhiChu" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="TinhTrangSach" type="hidden" />
                            <input type="submit" value="Trả sách" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
</div>
</div>
        </div>