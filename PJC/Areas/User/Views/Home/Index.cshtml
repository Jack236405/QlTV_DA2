                ['Tháng 2', @ViewBag.PhieuMuon2],
                ['Tháng 3', @ViewBag.PhieuMuon3],
                ['Tháng 4', @ViewBag.PhieuMuon4],
                ['Tháng 5', @ViewBag.PhieuMuon5],
                ['Tháng 6', @ViewBag.PhieuMuon6],
                ['Tháng 7', @ViewBag.PhieuMuon7],
                ['Tháng 8', @ViewBag.PhieuMuon8],
                ['Tháng 9', @ViewBag.PhieuMuon9],
                ['Tháng 10', @ViewBag.PhieuMuon10],
                ['Tháng 11', @ViewBag.PhieuMuon11],
                ['Tháng 12', @ViewBag.PhieuMuon12]
            ]);

            var options = {
                chart: {
                    title: '',
                }
            };

            var chart = new google.charts.Bar(document.getElementById('columnchart_material1'));

